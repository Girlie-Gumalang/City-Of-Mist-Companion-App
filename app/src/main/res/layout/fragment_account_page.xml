<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/violet"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    tools:context=".fragments.AccountPage">

    <ImageButton
        android:id="@+id/account_info_btn"
        android:layout_width="match_parent"
        android:layout_height="57dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/account_info_button_png"
        android:contentDescription="@string/account_info" />

    <ImageButton
        android:id="@+id/contact_support_btn"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@id/account_info_btn"
        android:layout_marginStart="16dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/contact_supp_button_png"
        android:contentDescription="@string/contact_support" />

    <ImageButton
        android:id="@+id/support_us_btn"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:layout_below="@id/contact_support_btn"
        android:layout_marginStart="16dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/support_us_button_png"
        android:contentDescription="@string/support_us" />

</LinearLayout>