<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    android:paddingVertical="8dp">

    <ImageView
        android:id="@+id/remove_story_tag_icon"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/ic_remove_circle"
        android:contentDescription="Remove Story Tag"
        android:tint="@color/rose"
        android:layout_marginEnd="8dp" />

    <EditText
        android:id="@+id/story_tag_name_edittext"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:hint="Story Tag Name"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:backgroundTint="@color/orange"
        android:singleLine="true" />

    <CheckBox
        android:id="@+id/story_tag_invoke_checkbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:buttonTint="@color/orange" />

</LinearLayout>