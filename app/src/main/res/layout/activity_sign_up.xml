<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/violet"
    android:orientation="vertical"
    tools:context=".SignUp">

    <Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/violet"
        android:elevation="4dp"
        android:titleTextColor="@android:color/white">

        <ImageView
            android:id="@+id/return_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="Back Button"
            android:src="@drawable/return_button" />
    </Toolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/logoImage"
            android:layout_width="345dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="80dp"
            android:src="@drawable/logo_cityofmist"/>

        <ImageView
            android:id="@+id/companionText"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="-20dp"
            android:layout_marginTop="-10dp"
            android:src="@drawable/companion_app_text"/>

        <TextView
            android:id="@+id/email_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="-108dp"
            android:layout_marginTop="40dp"
            android:text="Email"
            android:textColor="@color/orange"
            android:textSize="14sp"
            android:textStyle="bold"/>

        <EditText
            android:id="@+id/inputEmailSignUp"
            android:layout_width="250dp"
            android:layout_height="48dp"
            android:layout_marginTop="10sp"
            android:background="@drawable/rectangle"
            android:hint="Value"
            android:padding="10dp"
            android:textColor="@color/white"
            android:textColorHint="@color/light_gray"/>

        <TextView
            android:id="@+id/password_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="-95dp"
            android:layout_marginTop="20dp"
            android:text="Password"
            android:textColor="@color/orange"
            android:textSize="14sp"
            android:textStyle="bold"/>

        <EditText
            android:id="@+id/inputPasswordSignUp"
            android:layout_width="250dp"
            android:layout_height="48dp"
            android:layout_marginTop="10sp"
            android:background="@drawable/rectangle"
            android:hint="Value"
            android:inputType="textPassword"
            android:padding="10dp"
            android:textColor="@color/white"
            android:textColorHint="@color/light_gray"/>

        <TextView
            android:id="@+id/repeatPassword_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="-70dp"
            android:layout_marginTop="20dp"
            android:text="Repeat password"
            android:textColor="@color/orange"
            android:textSize="14sp"
            android:textStyle="bold"/>

        <EditText
            android:id="@+id/inputRepeatPasswordSignUp"
            android:layout_width="250dp"
            android:layout_height="48dp"
            android:layout_marginTop="10sp"
            android:background="@drawable/rectangle"
            android:hint="Value"
            android:inputType="textPassword"
            android:padding="10dp"
            android:textColor="@color/white"
            android:textColorHint="@color/light_gray"/>

        <ImageButton
            android:id="@+id/signUpButton"
            android:layout_width="250dp"
            android:layout_height="52dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="21dp"
            android:background="@drawable/signup_button_png"
            android:contentDescription="@string/signup_button" />

        <ProgressBar
            android:id="@+id/progressBar"
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone" android:layout_marginTop="16dp"
            android:layout_gravity="center_horizontal"/>

        <ImageView
            android:id="@+id/cityBackground"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="0dp"
            android:scaleType="fitXY"
            android:src="@drawable/city_background"/>

    </LinearLayout>

</LinearLayout>