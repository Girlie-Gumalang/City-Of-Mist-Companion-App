<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:background="@color/violet"
    tools:context=".SignIn">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <ImageView
            android:id="@+id/logoImage"
            android:layout_width="345dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="80dp"
            android:src="@drawable/logo_cityofmist" />

        <ImageView
            android:id="@+id/companionText"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="-10dp"
            android:layout_marginStart="-20dp"
            android:src="@drawable/companion_app_text" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal">

            <Button
                android:id="@+id/signInWithGoogle"
                android:layout_width="310dp"
                android:layout_height="48dp"
                android:layout_marginTop="75dp"
                android:background="@drawable/rectangle"
                android:backgroundTint="@null"
                android:text="Sign in with Google"
                android:textColor="@color/white"
                android:textSize="18sp" />

            <ImageView
                android:id="@+id/google_logo"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="-100dp"
                android:layout_marginTop="-32dp"
                android:src="@drawable/google_icon" />

            <Button
                android:id="@+id/signInWithFacebook"
                android:layout_width="310dp"
                android:layout_height="48dp"
                android:layout_marginTop="24dp"
                android:background="@drawable/rectangle"
                android:text="Sign in with Facebook"
                android:textColor="@color/white"
                android:textSize="18sp"/>

            <ImageView
                android:id="@+id/facebook_logo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="-110dp"
                android:layout_marginTop="-31dp"
                android:src="@drawable/facebook_icon"/>

            <Button
                android:id="@+id/signInWithEmail"
                android:layout_width="310dp"
                android:layout_height="48dp"
                android:layout_marginTop="24dp"
                android:background="@drawable/rectangle"
                android:text="Sign in with E-mail"
                android:textColor="@color/white"
                android:textSize="18sp"/>

            <ImageView
                android:id="@+id/mail_logo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/mail_icon"
                android:layout_marginTop="-31dp"
                android:layout_marginStart="-100dp"/>

            <Button
                android:id="@+id/VerifyAccount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Already have an account?"
                android:textColor="@color/pink"
                android:textSize="18sp"
                android:layout_marginTop="30dp"
                android:background="@android:color/transparent"/>

            <Button
                android:id="@+id/loginButtonInSignIn"
                android:layout_width="310dp"
                android:layout_height="48dp"
                android:layout_marginTop="-2dp"
                android:background="@drawable/rectangle"
                android:text="Login"
                android:textColor="@color/white"
                android:textSize="18sp"/>

        </LinearLayout>
    </LinearLayout>



</LinearLayout>
