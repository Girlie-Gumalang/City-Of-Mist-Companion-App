<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/violet"
    tools:context=".HomeScreen"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/logoImage"
            android:layout_width="345dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="80dp"
            android:src="@drawable/logo_cityofmist"/>

        <ImageView
            android:id="@+id/companionText"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="-10dp"
            android:layout_marginStart="-20dp"
            android:src="@drawable/companion_app_text"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal">

            <ImageButton
                android:id="@+id/characters_btn"
                android:layout_width="310dp"
                android:layout_height="52dp"
                android:layout_below="@id/rememberMe"
                android:layout_marginStart="20dp"
                android:layout_marginTop="75dp"
                android:layout_marginEnd="21dp"
                android:background="@drawable/characters_button_png"
                android:contentDescription="@string/characters_button" />

            <ImageButton
                android:id="@+id/rules_btn"
                android:layout_width="310dp"
                android:layout_height="52dp"
                android:layout_below="@id/rememberMe"
                android:layout_marginStart="20dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="21dp"
                android:background="@drawable/rules_button_png"
                android:contentDescription="@string/rules_button" />

            <ImageButton
                android:id="@+id/account_btn"
                android:layout_width="310dp"
                android:layout_height="52dp"
                android:layout_below="@id/rememberMe"
                android:layout_marginStart="20dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="21dp"
                android:background="@drawable/account_button_png"
                android:contentDescription="@string/account_button" />

        </LinearLayout>

    </LinearLayout>

    <ImageView
        android:id="@+id/cityBackground"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="0dp"
        android:layout_marginTop="150dp"
        android:scaleType="fitXY"
        android:src="@drawable/city_background"/>

</LinearLayout>