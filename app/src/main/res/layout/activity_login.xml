<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/violet"
    android:orientation="vertical"
    tools:context=".Login">

    <Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/violet"
        android:titleTextColor="@android:color/white"
        android:elevation="4dp">
        <ImageView
            android:id="@+id/return_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/return_button"
            android:contentDescription="Back Button"/>
    </Toolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/logoImage"
            android:layout_width="345dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="80dp"
            android:src="@drawable/logo_cityofmist" />

        <ImageView
            android:id="@+id/companionText"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="-20dp"
            android:layout_marginTop="-10dp"
            android:src="@drawable/companion_app_text"/>

        <TextView
            android:id="@+id/email_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="-108dp"
            android:layout_marginTop="50dp"
            android:text="Email"
            android:textStyle="bold"
            android:textColor="@color/orange"
            android:textSize="14sp"/>

        <EditText
            android:id="@+id/inputEmailLogin"
            android:layout_width="250dp"
            android:layout_height="48dp"
            android:background="@drawable/rectangle"
            android:layout_marginTop="10sp"
            android:hint="Value"
            android:padding="10dp"
            android:textColor="@color/white"
            android:textColorHint="@color/light_gray"/>

        <TextView
            android:id="@+id/password_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="-95dp"
            android:layout_marginTop="20dp"
            android:text="Password"
            android:textStyle="bold"
            android:textColor="@color/orange"
            android:textSize="14sp"/>

        <EditText
            android:id="@+id/inputPasswordLogin"
            android:layout_width="250dp"
            android:layout_height="48dp"
            android:background="@drawable/rectangle"
            android:layout_marginTop="10sp"
            android:hint="Value"
            android:inputType="textPassword"
            android:padding="10dp"
            android:textColor="@color/white"
            android:textColorHint="@color/light_gray"/>

        <CheckBox
            android:id="@+id/rememberMe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="-58dp"
            android:layout_marginTop="10dp"
            android:text="Remember Me"
            android:textSize="16sp"
            android:textColor="@color/white"/>

        <ImageButton
            android:id="@+id/loginButtonInLogin"
            android:layout_width="250dp"
            android:layout_height="52dp"
            android:layout_below="@id/rememberMe"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="23dp"
            android:layout_gravity="center"
            android:background="@drawable/login_button_png"
            android:contentDescription="@string/login_button" />

        <TextView
            android:id="@+id/forgotPasswordLink"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Forgot Password?"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:padding="8dp"
            android:layout_marginTop="16dp"
            android:clickable="true"
            android:focusable="true"/>
        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:indeterminateTint="@color/orange"
            android:visibility="gone" />

    </LinearLayout>

</LinearLayout>